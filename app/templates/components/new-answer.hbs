{{#if addNewAnswer}}
  <h1>New Answer</h1>
    <div>
      <form>
        <div class="form-group">
          <label for="username">User Name</label>
          {{input value=username id="username"}}
        </div>

        <div class="form-group">
          <label for="content">Answer</label>
          {{input value=content id="content"}}
        </div>
        <button {{action 'saveAnswer'}}>Save</button>
      </form>
    </div>
{{else}}
    <button {{action 'newAnswerForm'}}>New Answer</button>
{{/if}}
